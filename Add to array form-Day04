#include <stdlib.h>
// Add to array-form
int* addToArrayForm(int* num, int numSize, int k, int* returnSize) {
    
    int* temp = malloc((numSize + 20) * sizeof(int));
    int pos = 0;
    
    int carry = k;
    int i = numSize - 1;
    
    // reverse order
    while (i >= 0 || carry > 0) {
        int sum = carry;
        
        if (i >= 0) {
            sum += num[i];
            i--;
        }
        
        temp[pos++] = sum % 10;
        carry = sum / 10;
    }
    int* ans = malloc(pos * sizeof(int));
    
    for (int j = 0; j < pos; j++) {
        ans[j] = temp[pos - 1 - j];
    }
    
    *returnSize = pos;
    
    
    return ans;
}
